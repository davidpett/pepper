{
  "name": "pepper",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:android": "react-native run-android --no-packager",
    "dev:ios": "react-native run-ios --no-packager",
    "android": "concurrently \"yarn start\" \"yarn dev:android\"",
    "ios": "concurrently \"yarn start\" \"yarn dev:ios\"",
    "start": "react-native start --reset-cache",
    "test": "jest --coverage",
    "test:update": "jest --coverage -u",
    "test:watch": "jest --watch",
    "lint": "eslint ."
  },
  "dependencies": {
    "react": "16.8.6",
    "react-native": "0.60.5",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-reanimated": "^1.2.0",
    "react-native-screens": "^1.0.0-alpha.23",
    "react-navigation": "^3.12.1",
    "react-navigation-hooks": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@react-native-community/eslint-config": "^0.0.5",
    "@testing-library/react-native": "^4.0.8",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-native": "^0.60.8",
    "@types/react-test-renderer": "^16.9.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "concurrently": "^4.1.2",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.56.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "16.8.6",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn tsc && yarn test"
    }
  }
}
